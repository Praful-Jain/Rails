<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div class="alert alert-danger" style="color: red">
      <div class="alert-heading">
        <p><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</p>
      </div>
      <div>
        <ul>
          <% entry.errors.each do |error| %>
            <li><%= error.full_message %></li> 
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group m-2">
    <%= form.label :meal_type %>
    <%= form.text_field :meal_type, class: "form-control" %>
  </div>

  <div class="form-group m-2">
    <%= form.label :calories %>
    <%= form.number_field :calories, class: "form-control" %>
  </div>

  <div class="form-group m-2">
    <%= form.label :protiens %>
    <%= form.number_field :protiens, class: "form-control" %>
  </div>

  <div class="form-group m-2">   
    <%= form.label :carbohydrates %>
    <%= form.number_field :carbohydrates, class: "form-control" %>
  </div>

  <div class="form-group m-2">
    <%= form.label :fats %>
    <%= form.number_field :fats, class: "form-control" %>
  </div>

  <div class="form-group text-center m-2">
    <%= form.submit "Submit", class: "btn btn-success"%>
  </div>
<% end %>
