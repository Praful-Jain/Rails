<% content_for :title do %>
  Show Entry
<% end %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <%= render @entry %>
      <div class="d-flex">
        <%= link_to "Edit this entry", edit_entry_path(@entry), class: "btn btn-light btn-sm m-2" %>
        <%= link_to "Back to entries", entries_path, class: "btn btn-light btn-sm m-2" %>
        <%= button_to "Destroy this entry", @entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light btn-sm m-2" %>
      </div>
    </div>
  </div>
</div>


