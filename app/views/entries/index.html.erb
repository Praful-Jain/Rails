<% content_for :title do %>
  Entries &ndash; <%= DateTime.now.to_formatted_s(:nice_date) %>
<% end %>

<div class="container">
  <div class="row justify-content-around text-center">
    <% @entries.each do |entry| %>
    <div class="col-md-4">
        <div class="card mb-4" style="width: 18rem; margin: 20px auto;">
          <div class="card-body">
            <h5 class="card-title"><%= entry.meal_type %></h5>
          </div>
          <ul class="list-group list-group-flush"> 
            <li class="list-group-item"><span class="font-weight-bold"><%= entry.calories %></span> calories</li>
            <li class="list-group-item"><span class="font-weight-bold"><%= entry.protiens %></span> grams of protien</li>
            <li class="list-group-item"><span class="font-weight-bold"><%= entry.carbohydrates %></span> grams of carbohydrates</li>
            <li class="list-group-item"><span class="font-weight-bold"><%= entry.fats %></span> grams of fat</li> 
            <li class="list-group-item"><span class="font-weight-bold">Logged <%= time_ago_in_words(entry.created_at) %> ago</li> 
          </ul>
          <div class="card-body d-flex justify-content-around text-center">
            <%= link_to 'Show', entry, class:"card-link text-decoration-none" %></td>
            <%= link_to 'Edit', edit_entry_path(entry), class:"card-link text-decoration-none" %></td>
            <!-- `entry` -> This is the path or URL where the link will point. When you pass an ActiveRecord object like entry, 
             Rails will automatically use the appropriate path helper, which in this case would be something like entry_path(entry). -->
            <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class:"card-link text-decoration-none" %></td>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-12 d-flex justify-content-center mb-4">
      <%= link_to 'New Entry', new_entry_path, class: 'btn btn-primary' %>
    </div>  
    <div class="col-12 d-flex justify-content-center mb-4">
      <%= link_to '___', archives_index_path, class: 'btn btn-primary' %>
    </div>  
  </div>

